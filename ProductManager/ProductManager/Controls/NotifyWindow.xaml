<controls:ChildWindow x:Class="ProductManager.Controls.NotifyWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="159"
           FontFamily="{StaticResource ContentFontFamily}"
           FontSize="{StaticResource ContentFontSize}"
           Loaded="ChildWindow_Loaded" Style="{StaticResource JPBChildWindow}">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="1" Style="{StaticResource BlueButton}" />
        <TextBlock x:Name="NotifyContext" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Foreground="Black" FontSize="16"/>
    </Grid>
</controls:ChildWindow>