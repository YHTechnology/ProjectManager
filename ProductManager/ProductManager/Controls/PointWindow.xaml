<controls:ChildWindow x:Class="ProductManager.Controls.PointWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="1150" Height="450" FontFamily="Microsoft YaHei" FontSize="13"
           Title="报表打印" Loaded="ChildWindow_Loaded">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Margin="12,12,12,0" FontFamily="NSimsun" FontSize="13">
            <StackPanel Name="PintConter" Background="#FF585858">
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="CancelButton" Content="关闭" Click="CancelButton_Click" Width="75" Height="30" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" Style="{StaticResource BlueButton}" />
        <Button x:Name="OKButton" Content="打印" Click="OKButton_Click" Width="75" Height="30" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" Style="{StaticResource BlueButton}" />
    </Grid>
</controls:ChildWindow>
