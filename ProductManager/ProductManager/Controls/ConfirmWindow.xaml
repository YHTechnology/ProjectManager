<controls:ChildWindow x:Class="ProductManager.Controls.ConfirmWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="459" Height="161" 
           FontFamily="{StaticResource ContentFontFamily}" FontSize="{StaticResource ContentFontSize}" Loaded="ChildWindow_Loaded" Style="{StaticResource JPBChildWindow}">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Content="取消" Click="CancelButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="1" Style="{StaticResource BlueButton}"/>
        <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,10,79,0" Grid.Row="1" Style="{StaticResource BlueButton}"/>
        <TextBlock x:Name="ConfirmContext" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Foreground="Black" FontSize="16"/>
    </Grid>
</controls:ChildWindow>